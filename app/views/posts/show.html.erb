<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<a href="https://twitter.com/intent/tweet?text=What+a+cool+post!+<%= post_url %>" target="_blank">
Tweet this</a>

<%= render 'comments/form', comment: @comment %>

<% @comments.each do |comment| %>
  <p><%= comment.user.email %></p>
  <p><%= comment.content %></p>
<% end %>
